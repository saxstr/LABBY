<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F1E7"
    tools:context=".TestResultSc">


    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نتائج تحليل: الصور"
        android:textSize="24sp"
        android:textColor="#5B3A29"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:layout_marginBottom="20dp"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تسمية"
        android:textSize="20sp"
        android:textColor="#005EB8"
    android:layout_gravity="end"
    android:layout_marginBottom="20dp"/>

    <!-- Results Entries -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Entry 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp"
            android:gravity="start">

            <TextView
                android:id="@+id/displayOcr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2ml/mol"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Entry 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp"
            android:gravity="start">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تحليل رقم 1"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024/5/03"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Entry 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:color/white"
            android:layout_marginBottom="12dp"
            android:gravity="start">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تحليل رقم 2"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024/5/06"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/tables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to med tables"

            />

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الاتصال ب 937"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/navy"
        android:layout_marginTop="8dp"/>
    </LinearLayout>


</LinearLayout>


